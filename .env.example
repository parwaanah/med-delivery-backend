# ======================================
# 🌿 ENVIRONMENT CONFIGURATION TEMPLATE
# ======================================

# 🗄️ DATABASE CONNECTION
DATABASE_URL="postgresql://postgres:YOUR_DB_PASSWORD@localhost:5432/med_delivery?schema=public"

# 🔐 JWT SECRETS
JWT_SECRET="your_jwt_secret_here"
JWT_REFRESH_SECRET="your_jwt_refresh_secret_here"

# 🧱 APP ENVIRONMENT
NODE_ENV=development
PORT=3001

# 🌐 FRONTEND ORIGIN (for CORS)
FRONTEND_URL="http://localhost:5173"

# 🔔 FIREBASE / FCM CONFIG (for notifications)
FIREBASE_PROJECT_ID="your_project_id"
FIREBASE_PRIVATE_KEY="your_firebase_private_key"
FIREBASE_CLIENT_EMAIL="firebase-adminsdk@your_project_id.iam.gserviceaccount.com"

# ⚙️ SYSTEM CONFIG
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MINUTES=15
LOG_LEVEL=debug
LOG_DIR="./logs"

# 🧾 OPTIONAL: BACKEND URL (useful for notifications or webhooks)
BACKEND_BASE_URL="http://localhost:3001"

